<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".Register">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/registrationTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="128dp"
            android:fontFamily="@font/archivo_bold"
            android:text="Registration"
            android:textColor="@color/white"
            android:textSize="70px"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="52dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/archivo_bold"
            android:text="Name"
            android:textColor="@color/white"
            android:textSize="55px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registrationTV" />

        <TextView
            android:id="@+id/siswamailTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/archivo_bold"
            android:text="Siswamail Username"
            android:textColor="@color/white"
            android:textSize="55px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameTB" />

        <TextView
            android:id="@+id/passwordTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/archivo_bold"
            android:text="Password"
            android:textColor="@color/white"
            android:textSize="55px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/siswamailTB" />

        <TextView
            android:id="@+id/confirmPasswordTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/archivo_bold"
            android:text="Confirm Password"
            android:textColor="@color/white"
            android:textSize="55px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordTB" />

        <TextView
            android:id="@+id/facultyregisterTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="45dp"
            android:fontFamily="@font/archivo_bold"
            android:text="Faculty"
            android:textColor="@color/white"
            android:textSize="55px"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTB" />

        <EditText
            android:id="@+id/nameTB"
            android:layout_width="331dp"
            android:layout_height="31dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedtextbox"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nameTV" />

        <EditText
            android:id="@+id/siswamailTB"
            android:layout_width="331dp"
            android:layout_height="31dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedtextbox"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:inputType="textPersonName"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/siswamailTV" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/passwordTextLayout"
            android:layout_width="331dp"
            android:layout_height="31dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:textColorHint="#B9B8B8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordTV"
            app:passwordToggleEnabled="true" />
            <EditText
                android:id="@+id/passwordTB"
                android:layout_width="331dp"
                android:layout_height="31dp"
                android:layout_marginStart="45dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/roundedtextbox"
                android:ems="10"
                android:fontFamily="@font/archivo"
                android:inputType="textPassword"
                android:text=""
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passwordTV" />


        <EditText
            android:id="@+id/confirmPasswordTB"
            android:layout_width="331dp"
            android:layout_height="31dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/roundedtextbox"
            android:ems="10"
            android:fontFamily="@font/archivo"
            android:inputType="textPassword"
            android:text=""
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmPasswordTV" />

        <Spinner
            android:id="@+id/facultySpinner"
            android:layout_width="331dp"
            android:layout_height="31dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="45dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/roundedtextbox"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facultyregisterTV" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn"
            android:layout_width="72dp"
            android:layout_height="27dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/rounded_button"
            android:fontFamily="@font/archivo_bold"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/facultySpinner" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>