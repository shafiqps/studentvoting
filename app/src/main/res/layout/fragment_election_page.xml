<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".ElectionPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ElectionTB"
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="#000033"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:id="@+id/textElectionTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/archivo_bold"
        android:text="Election"
        android:textColor="#FFFFFF"
        android:textSize="70px"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/vertilay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/horilay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/horilay3"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/vertlay2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:fontFamily="@font/archivo_bold"
                        android:paddingLeft="10dip"
                        android:text="Time until voting begins"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_bold"
                        android:paddingLeft="10dip"
                        android:text="[TIMER]"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/archivo"
                            android:paddingLeft="10dip"
                            android:text="Tap to see"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:fontFamily="@font/archivo"
                            android:text="important dates"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vertlay3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/goToVotingButton"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/fuckcolor"
                        android:backgroundTintMode="add"
                        android:fontFamily="@font/archivo_bold"
                        android:text="VOTING IS OPEN!"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/searchTextInput"
                android:layout_width="370dp"
                android:layout_height="40dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/roundedtextbox"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:hint="Search for a candidate"
                android:inputType="text"
                android:paddingLeft="30dp"
                android:textColor="#000000"
                android:textColorHint="@color/gray"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="84dp"
                android:layout_height="41dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:fontFamily="@font/archivo"
                android:text="Search by :"
                android:textColor="#FFFFFF" />

        </LinearLayout>


    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="270dp"
        android:clickable="false"
        android:isScrollContainer="false" />

    <ImageButton
        android:id="@+id/nameFilterButton"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerVertical="false"
        android:layout_marginTop="215dp"
        android:backgroundTint="@color/transparent"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/filter_selection" />

    <ImageButton
        android:id="@+id/facultyFilterbutton"
        android:layout_width="113dp"
        android:layout_height="60dp"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="210dp"
        android:backgroundTint="#00000033"
        android:clickable="true"
        android:scaleType="centerInside"
        android:src="@drawable/filter_selector2" />

    <ImageButton
        android:id="@+id/partyFilterButton"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="185dp"
        android:layout_marginTop="210dp"
        android:backgroundTint="#00FFFFFF"
        android:clickable="true"
        android:scaleType="fitCenter"
        android:src="@drawable/filter_selector3" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="285dp"
        android:background="@drawable/roundedtextbox"
        android:backgroundTintMode="screen"
        android:fontFamily="@font/inter_bold"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Map of University Malaya"
        android:textColor="@color/black"
        android:textSize="13sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="15dp"
        android:layout_height="18dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="162dp"
        android:src="@drawable/vector" />

</RelativeLayout>