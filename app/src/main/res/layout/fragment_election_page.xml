<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkblue"
    tools:context=".ElectionPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/ElectionTB"
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="#000033"
        android:minHeight="?attr/actionBarSize" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonToResultPage"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="142dp"
        android:layout_marginBottom="26dp"
        android:background="@drawable/rounded_button"
        android:fontFamily="@font/archivo_bold"
        android:text="Button to result"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/textElectionTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/archivo_bold"
        android:text="Election"
        android:textColor="#FFFFFF"
        android:textSize="70px"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/vertilay1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="55dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/horilay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/horilay3"
                android:layout_width="match_parent"
                android:layout_height="77dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/vertlay2"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dip"
                        android:fontFamily="@font/archivo_bold"
                        android:paddingLeft="10dip"
                        android:text="Time until voting begins"
                        android:textColor="#FFFFFF"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/textView7"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/archivo_bold"
                        android:paddingLeft="10dip"
                        android:text="[TIMER]"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/archivo"
                            android:paddingLeft="10dip"
                            android:text="Tap to see"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:id="@+id/textView16"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:fontFamily="@font/archivo"
                            android:text="important dates"
                            android:textAllCaps="false"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/vertlay3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/goToVotingButton"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginTop="5dp"
                        android:backgroundTint="@color/fuckcolor"
                        android:backgroundTintMode="add"
                        android:fontFamily="@font/archivo_bold"
                        android:text="VOTING IS OPEN!"
                        android:textColor="#FFFFFF"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="94dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/searchTextInput"
                    android:layout_width="370dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/roundedtextbox"
                    android:backgroundTint="@color/backgroundgrey"
                    android:backgroundTintMode="add"
                    android:drawableBottom="@drawable/roundedtextbox"
                    android:fontFamily="@font/archivo_bold"
                    android:hint="Search For A Candidate"
                    android:selectAllOnFocus="true"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="#000000"
                    android:textColorHighlight="#FFFFFF"
                    app:textInputLayoutFocusedRectEnabled="true" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="84dp"
                    android:layout_height="41dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/archivo"
                    android:text="Search by :"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


    </LinearLayout>

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:clickable="false"
        android:isScrollContainer="false" />

</RelativeLayout>