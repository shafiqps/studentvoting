<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".CandidateProfile">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/profileTB"
            android:layout_width="match_parent"
            android:layout_height="143px"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme" />

        <TextView
            android:id="@+id/profileTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/profileTB"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="0dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="9dp"
            android:fontFamily="@font/archivo_bold"
            android:text="Faculty Profile"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="70px"
            android:textStyle="bold"
            android:gravity="center"/>


        <TextView
            android:id="@+id/facultyTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profileTB"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:textAlignment="center"
            android:paddingLeft="0dp"
            android:text="Faculty blablablanlalalal sanjivan balajawahar"
            android:textColor="@color/black"
            android:textSize="70px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/competingCandidates_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/facultyTV"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="120dp"
            android:paddingLeft="0dp"
            android:text="Competing candidates"
            android:textColor="@color/black"
            android:textSize="58px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/previousRep_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollableView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="120dp"
            android:paddingLeft="0dp"
            android:text="Previous representatives"
            android:textColor="@color/black"
            android:textSize="58px"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/socials_TV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/scrollable"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="120dp"
            android:paddingLeft="0dp"
            android:text="Socials"
            android:textColor="@color/black"
            android:textSize="58px"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/scrollableView"
            android:layout_below="@+id/competingCandidates_TV"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider_vertical_scrollable"
                    android:isScrollContainer="false"
                    android:orientation="vertical"
                    android:showDividers="middle">

                    <Button
                        android:id="@+id/button2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button" />

                    <Button
                        android:id="@+id/button4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Button" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <HorizontalScrollView
            android:id="@+id/scrollable"
            android:layout_width="wrap_content"
            android:layout_height="160dp"
            android:layout_below="@+id/previousRep_TV"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:divider="@drawable/divider"
                android:isScrollContainer="false"
                android:showDividers="middle">

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/prev_rep_bg">

                    <TextView
                        android:id="@+id/sessionRep1"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:paddingBottom="0dp"
                        android:text="2020/2021"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/imageRep1"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_weight="1"
                        android:src="@drawable/ahmad" />

                    <TextView
                        android:id="@+id/rep1"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="anak bapak"
                        android:gravity="center|top"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/prev_rep_bg">

                    <TextView
                        android:id="@+id/sessionRep2"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:paddingBottom="0dp"
                        android:text="2020/2021"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/imageRep2"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_weight="1"
                        android:src="@drawable/ahmad" />

                    <TextView
                        android:id="@+id/rep2"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="anak bapak"
                        android:gravity="center|top"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/prev_rep_bg">

                    <TextView
                        android:id="@+id/sessionRep3"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:gravity="center|top"
                        android:paddingBottom="0dp"
                        android:text="2020/2021"
                        android:textSize="15dp" />

                    <ImageView
                        android:id="@+id/imageRep3"
                        android:layout_width="match_parent"
                        android:layout_height="79dp"
                        android:layout_weight="1"
                        android:src="@drawable/ahmad" />

                    <TextView
                        android:id="@+id/rep3"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_weight="1"
                        android:text="anak bapak"
                        android:gravity="center|top"
                        />

                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>


    </RelativeLayout>

</FrameLayout>