<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDEDEDED"
    tools:context=".FAQPage">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/FAQTB"
        android:layout_width="match_parent"
        android:layout_height="143px"
        android:background="#000033"
        android:minHeight="?attr/actionBarSize" />

    <TextView
        android:id="@+id/textFAQTB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/FAQTB"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="152dp"
        android:layout_marginTop="9dp"
        android:layout_marginEnd="153dp"
        android:layout_marginBottom="9dp"
        android:fontFamily="@font/archivo_bold"
        android:text="FAQ"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="70px"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/BtnPrevResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/arrow_back_"
        android:translationX="40px"
        android:translationY="33px"/>

    <ExpandableListView
        android:id="@+id/faqExpandableListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/FAQTB"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:background="@drawable/roundedcorner"
        android:divider="@android:color/white"
        android:dividerHeight="0.5dp"
        android:drawableRight="@drawable/arrow_forward"
        android:groupIndicator="@drawable/faq_selector"
        android:layoutDirection="rtl"
        android:isScrollContainer="true" />


</RelativeLayout>