<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">48px</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:textSize">36px</item>
    </style>

    <style name="ResultSelectionTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:fontFamily">@font/archivo_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">48px</item>
        <item name="android:textColorHighlight">@color/white</item>
    </style>
</resources>